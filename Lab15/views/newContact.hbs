<div class="form-part contacts" style="height: 79%;">
    <div class="list-container blocked" style="height: 30rem;">
        {{#each contacts}}
            {{>contact}}
        {{/each}}
    </div>
</div>

<form class="form">

    <div style="display: flex; justify-content: space-between;">
        <input class="input" type="text" required name="name" placeholder="Имя">

        <input class="input" type="tel" required name="phone" placeholder="Телефон">
    </div>


</form>
<div class="controls-wrapper">
    <div class="form-part control">
        <button id="addButton" onclick="addContact()">Добавить</button>
    </div>
    <div class="form-part control">
        <button onclick="{{goBack}}">Отказаться</button>
    </div>
</div>
